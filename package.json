{
  "name": "minidocs",
  "version": "1.2.1",
  "description": "build a simple site for your documentation",
  "main": "index.js",
  "style": "components/styles/index.css",
  "scripts": {
    "start": "budo index.js:bundle.js --live",
    "lint": "standard",
    "build:example": "cd example && browserify index.js -p yo-yoify -o bundle.js",
    "deploy:example": "surge example minidocs-example.surge.sh",
    "build": "browserify docs/index.js -p yo-yoify -o docs/bundle.js",
    "deploy": "npm run build && surge site minidocs.surge.sh"
  },
  "bin": {
    "minidocs": "cli.js"
  },
  "browserify": {
    "transform": [ "read-directory/transform", "sheetify/transform" ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freeman-lab/minidocs.git"
  },
  "keywords": [
    "docs",
    "documentation",
    "site",
    "build",
    "component"
  ],
  "author": "freeman-lab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/freeman-lab/minidocs/issues"
  },
  "browserify": {
    "transform": []
  },
  "homepage": "https://github.com/freeman-lab/minidocs#readme",
  "dependencies": {
    "bel": "^4.3.1",
    "camelcase": "^2.1.1",
    "choo": "^2.1.3",
    "create-html": "^1.0.0",
    "dom-css": "^2.0.0",
    "exit": "^0.1.2",
    "from2-string": "^1.1.0",
    "highlight.js": "^9.2.0",
    "hyperstream": "^1.2.2",
    "insert-css": "^0.2.0",
    "lodash.foreach": "^4.1.0",
    "lodash.isobject": "^3.0.2",
    "lodash.map": "^4.4.0",
    "marked": "^0.3.5",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "os-tmpdir": "^1.0.1",
    "parse-filepath": "^1.0.1",
    "read-directory": "^1.2.0",
    "rimraf": "^2.5.2",
    "sheetify": "^5.0.1",
    "simple-html-index": "^1.2.0"
  },
  "devDependencies": {
    "browserify": "^13.0.1",
    "budo": "^8.1.0",
    "debug": "^2.2.0",
    "standard": "^6.0.8",
    "yo-yoify": "^2.0.1"
  }
}
